{
  "name": "psp-layout",
  "version": "2.0.0",
  "description": "Modern CSS Grid-based responsive layout system with mobile-first approach - PSP Layout Plugin",
  "author": "Pattaya Upara <everysundays@gmail.com>",
  "license": "MIT",
  "main": "scripts/twlayout-plugin.js",
  "keywords": [
    "css",
    "grid",
    "flexbox",
    "layout",
    "responsive",
    "tailwind",
    "psp",
    "rack",
    "rail"
  ],
  "files": [
    "scripts/",
    "doc/",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/psp-asia/psp-layout"
  },
  "bugs": {
    "url": "https://github.com/psp-asia/psp-layout/issues"
  },
  "homepage": "https://github.com/psp-asia/psp-layout#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "scripts": {
    "build": "echo 'CSS-first configuration - no build step required'",
    "test": "npm run test:jest",
    "test:jest": "jest --config=../../jest.config.js",
    "version": "npm version"
  },
  "config": {
    "pluginType": "layout-system",
    "compatibility": {
      "tailwind": ">=4.0.0",
      "browsers": [
        "Chrome >= 57",
        "Firefox >= 52", 
        "Safari >= 12",
        "Edge >= 16"
      ],
      "features": [
        "CSS Grid",
        "Flexbox",
        "CSS Custom Properties",
        "Media Queries"
      ]
    }
  }
} 