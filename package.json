{
  "name": "psp-env",
  "version": "1.0.0",
  "description": "CSS Grid (Rack) + Flexbox (Rail) layout system with visual debugging tools",
  "license": "MIT",
  "author": "Pattaya Upara <everysundays@gmail.com>",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:css": "tailwindcss -i ./public/css/tailwind.css -o ./public/css/main.css --minify",
    "watch:css": "tailwindcss -i ./public/css/tailwind.css -o ./public/css/main.css --watch",
    "dev": "concurrently \"npm run watch:css\" \"ruby app.rb\"",
    "demo": "open http://localhost:4567/demo"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "tailwindcss": "^4.1.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "concurrently": "^8.2.2"
  }
}